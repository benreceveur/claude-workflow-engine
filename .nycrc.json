{
  "all": true,
  "include": [
    "src/**/*.js"
  ],
  "exclude": [
    "tests/**",
    "coverage/**",
    "node_modules/**",
    "**/*.test.js"
  ],
  "reporter": [
    "text",
    "text-summary",
    "html",
    "lcov"
  ],
  "report-dir": "./coverage",
  "check-coverage": true,
  "lines": 80,
  "functions": 80,
  "branches": 80,
  "statements": 80,
  "watermarks": {
    "lines": [80, 95],
    "functions": [80, 95],
    "branches": [80, 95],
    "statements": [80, 95]
  }
}
